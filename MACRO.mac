CLK_SET_LOW		MACRO
	lda		PD
	and		#$bf
	sta		PD
	ENDM

CLK_SET_HIGH	MACRO
	lda		PD
	ora		#$40
	sta		PD
	ENDM
		
SDI_SET_LOW		MACRO
